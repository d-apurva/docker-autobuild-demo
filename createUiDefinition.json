{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Admin Username",
        "toolTip": "Username to use for SSH access to the virtual machines",
        "defaultValue": "gfadmin",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9]{3,12}$",
          "validationMessage": "Admin Username must be 3 to 12 alphanumeric characters"
        },
        "osPlatform": "Linux"
      },
	  {
	          "name": "sshPublicKey",
	          "type": "Microsoft.Compute.CredentialsCombo",
	          "label": {
	            "authenticationType": "Authentication Type",
	            "password": "Admin Password",
	            "confirmPassword": "Confirm Admin Password",
	            "sshPublicKey": "SSH Public Key"
	          },
	          "toolTip": {
	            "authenticationType": "Which authentication type to use when connecting to the virtual machines: Password or SSH Public Key",
	            "password": "Password to use for SSH access to the virtual machines",
	            "sshPublicKey": "Public key for passwordless SSH access to the virtual machines. The OpenSSH public key can be generated with tools like ssh-keygen on Linux or OS X."
	          },
	          "constraints": {
	            "required": true
	          },
	          "options": {
	            "hideConfirmation": false
	          },
	          "osPlatform": "Linux"
	        }
    ],
    "steps" : [
      {
        "name": "configureMN",
        "label" : "Master and Node Configuration",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle" : "Master Configuration",
        "elements" : [
          {
        "name": "clusterName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Admin Username",
        "toolTip": "DNS prefix for the application",
        "defaultValue": "dockmcluster",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9]{3,12}$",
          "validationMessage": "Cluster Name must be 3 to 12 alphanumeric characters"
        },
        "osPlatform": "Linux"
      },
        ]
      }
    ],
    "outputs": {
      "location" : "[location()]",      
      "adminUsername": "[basics('adminUsername')]"
	    "adminPassword": "[basics('sshPublicKey').password]",
	    "sshPublicKey": "[basics('sshPublicKey').sshPublicKey]",
	    "authenticationType": "[basics('sshPublicKey').authenticationType]",
      "clusterName": "[steps('configureMN').clusterName]",
    }
  }
}
